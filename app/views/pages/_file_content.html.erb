<!-- file_content -->
<div class="row justify-content-center">
    <% if false %>
    <!-- header -->
    <div class="col-12 col-lg-<%= @size %>">
        <!-- title -->
        <h1>
            <a href="/<%= @route_path %>/<%= @category %>/<%= @group %>/<%= @file %>" data-turbolinks="true"><%= @file.gsub('-', ' ').titleize %></a>
        </h1>
        <!-- link navigation -->
        <p class="m-0 text-muted">
            <a href="/<%= @route_path %>#<%= @category %>" data-turbolinks="true"><%= @category.titleize %></a> &#9642; <a href="/<%= @route_path %>#<%= @category %>_<%= @group.gsub('-', '_')%>" data-turbolinks="true"><%= @group.gsub('-', ' ').titleize %></a>
        </p>
    </div>
    <% end %>
    <!-- post details -->
    <div class="col-12 col-lg-<%= @size %>">
        <!-- meta -->
        <p class="text-muted m-0">
            <a href="/<%= @route_path %>#<%= @category %>" data-turbolinks="true"><%= @category.titleize %></a> &#9642; <a href="/<%= @route_path %>#<%= @category %>_<%= @group.gsub('-', '_')%>" data-turbolinks="true"><%= @group.gsub('-', ' ').titleize %></a>
        </p>
        <!-- title -->
        <h1 class="my-3">
            <a href="/<%= @route_path %>/<%= @category %>/<%= @group %>/<%= @file %>" data-turbolinks="true"><%= @file.gsub('-', ' ').titleize %></a>
        </h1>
    </div>
    <!-- content -->
    <div class="col-12 col-lg-<%= @size %> mb-3">
        <div class="container-fluid">
            <div class="row">
                <!-- header -->
                <div class="col-12 background--grey d-none">
                    <p class="mt-2 mb-2"><%= @file %><%= @format %></p>
                </div>
                <!-- body -->
                <% @lang = @category %>
                <% if @category == 'pascal' %>
                    <% @lang = 'delphi' %>
                <% end %>
                <% if @category == 'c++' %>
                    <% @lang = 'cpp' %>
                <% end %>
                <% if @group == 'x86'%>
                    <% @lang = 'x86asm' %>
                <% end %>
                <div class="col-12 p-0">
                    <pre lang="<%= @lang %>" class="prettyprint background--grey language-<%= @lang %>"><%= @file_content %>
                    </pre>
                </div>
            </div>
        </div>
    </div>
    <!-- github -->
    <div class="col-12 col-lg-<%= @size %> text-md-center">
        <p class="m-0"><a href="<%= @url %><%= @group %>/<%= @file %><%= @format %>" target="_blank">View on GitHub</a></p>
    </div>
</div>
<!-- ./file_content