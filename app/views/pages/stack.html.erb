<% @size = 8 %>

<div class="container">
  <!-- intro -->
  <div class="row justify-content-center">
    <div class="col-12 col-lg-<%= @size %> text-center">
      <p class="mb-0">Things I use to build stuff. Note that some links are Amazon affiliates, so if you hate that just google the thing instead of following the link.</p>
    </div>
  </div>
  <!-- stack -->
  <div class="row justify-content-center mt-5">
    <div class="col-12 col-lg-<%= @size %>">
        <div class="row list">
          <% @stack.keys.each do |category| %>
          <!-- header -->
          <!-- <li class="col-12">
            <p class="font-weight-bold my-3 px-3 py-2"><%= category.titleize %></p>
          </li> -->
          <% @stack[category].keys.each do |item| %>
          <!-- item -->
          <li class="col-12">
            <div class="container-fluid">
              <div class="row border-solid--grey py-3 <% if @stack[category].keys.first != item or @stack.keys.first != category %>no-border-top<% end %>">
                <!-- item -->
                <div class="col-12">
                  <!-- name -->
                  <% unless @stack[category][item]['url'] == nil %>
                  <a href="<%= @stack[category][item]['url'] %>" target="_blank"><%= item %></a>
                  <% else %>
                  <p class="text-muted m-0"><%= item %></p>
                  <% end %>
                  <!-- description -->
                  <p class="m-0"><%= @stack[category][item]['description'] %></p>
                </div>
              </div>
            </div>
          </li>
          <% end %>
          <% end %>
        </div>
    </div>
  </div>
</div>
