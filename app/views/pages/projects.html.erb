<%= render 'navigation' %>

<% @size = 8 %>
<% @d_size = 8 %>

<div class="container">
  <!-- page size wrapper -->
  <div class="row justify-content-center">
    <div class="col-12 col-lg-<%= @size %>">
      <!-- <p class="p-3 text-center border-solid--grey my-4">See also open source projects on <a href="https://github.com/miqqeio" target="_blank"><i class="fab fa-github pl-1"></i> GitHub</a></p> -->
      <p class="p-3 text-center border-solid--grey my-4">This is a list of projects that I am currently involved in. See list of previous projects here: <a href="/writing/projects-graveyard">Projects Graveyard</a>.</p>
      <!-- projects -->
      <% @projects.keys.each do |project| %>
        <% if @projects[project]['show'] == true %>
          <div class="row justify-content-center">
            <!-- title -->
            <div class="col-12 mb-0">
              <h3 class="font-family-base font-weight-bold pb-0 <% if @projects[project]['url'] == "" %>text-muted<% end %>">
                <% if @projects[project]['url'] != "" %>
                <a href="<%= @projects[project]['url'] %>" target="_blank">
                  <%= project %>
                </a>
                <span class="text-muted"><% if @projects[project]['archived'] %>[ARCHIVED]<% end %></span>
                <% else %>
                  <%= project %>
                <% end %>
              </h3>
            </div>
            <!-- body -->
            <% if @projects[project]['description'] != [] %>
            <div class="col-12 mt-2">
              <blockquote>
                <!-- description -->
                <% @projects[project]['description'].each do |paragraph| %>
                  <p class="<% unless paragraph.equal?(@projects[project]['description'].last) %>mb-3<% else %>m-0<% end %> font-family-serif"><em><%= paragraph %></em></p>
                <% end %>
                <!-- github -->
                <% if @projects[project]['github'] %>
                  <p class="mb-0 mt-3">Github<% if @projects[project]['archived'] %> [ARCHIVED]<% end %>: <a href="<%= @projects[project]['github'] %>" target="_blank"><%= @projects[project]['github'] %></a></p>
                <% end %>
                <!-- website -->
                <% if @projects[project]['website'] %>
                  <p class="mb-0 mt-3">Website: <a href="<%= @projects[project]['website'] %>" target="_blank"><%= @projects[project]['website'] %></a></p>
                <% end %>
              </blockquote>
            </div>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
    <%= render 'divider', locals: { size: @d_size } %>
  </div><!-- ./page size wrapper -->
</div>

<%= render 'footer' %>