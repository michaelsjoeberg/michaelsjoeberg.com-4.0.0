<% @size = 8 %>

<div class="container">
  <!-- intro -->
  <div class="row justify-content-center">
    <div class="col-12 col-lg-<%= @size %> text-center">
      <p class="mb-0">Projects that I have been involved in that turned into working products. This list would be longer if including all non-shipped products...</p>
    </div>
  </div>
  <!-- projects -->
  <div class="row justify-content-center mt-5">
    <div class="col-12 col-lg-<%= @size %>">
      <!-- <p class="p-3 text-center border-solid--grey my-4">Read about my previous projects in <a href="/writing/projects-graveyard">Projects Graveyard</a>.</p> -->
      <!-- projects -->
      <% @projects.keys.each do |project| %>
          <div class="row justify-content-center">
            <!-- title -->
            <div class="col-12 mb-0">
              <h3 class="font-family-base font-weight-bold pb-0 <% if @projects[project]['url'] == "" %>text-muted<% end %>">
                <% if @projects[project]['url'] %>
                <a href="<%= @projects[project]['url'] %>"><%= project %></a>
                <% else %>
                <span class="text-muted"><%= project %></span>
                <% end %>
              </h3>
            </div>
            <!-- body -->
            <% if @projects[project]['description'] %>
            <div class="col-12 mt-2">
              <blockquote>
                <!-- description -->
                <p><em><%= @projects[project]['description'] %></em></p>
              </blockquote>
            </div>
            <% end %>
          </div>
      <% end %>
    </div>
  </div>
</div>
